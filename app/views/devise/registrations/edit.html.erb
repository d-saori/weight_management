<div class="d-grid gap-2 col-6 mx-auto">
  <h2>アカウント編集</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= bootstrap_devise_error_messages! %>

    <br>
    <div class="form-group">
      <%= f.label :メールアドレス %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control form-control-sm' %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control form-control-sm' %>

      <small class="form-text text-muted"><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></small>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control form-control-sm'  %>
    </div>

    <div class="form-group">
      <%= f.label :current_password %>
      <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control form-control-sm' %>

      <small class="form-text text-muted"><%= t('.we_need_your_current_password_to_confirm_your_changes') %></small>
    </div>

    <br>
    <div class="field">
      <%= f.label :プロフィール画像 %><br />
      <%= f.file_field :avatar, accept: "image/png,image/jpeg,image/gif" %>
    </div>


    <br>
    <div class="field">
      <%= f.label :氏名 %><br />
      <%= f.text_field :username, class: 'form-control form-control-sm' %>
    </div>

    <br>
    <div class="field">
      <%= f.label :年齢 %><br />
      <%= f.number_field :age, class: 'form-control form-control-sm' %>
    </div>

    <br>
    <div class="field">
      <%= f.label :性別 %><br />
      <%= f.select :gender, [["男", "男"], ["女", "女"]], :prompt => "選択してください" %>
    </div>

    <br>
    <div class="field">
      <%= f.label :身長 %><br />
      <%= f.number_field :height, :class => 'text_field' %>
    </div>

    <br>
    <div class="field">
      <%= f.label :体重 %><br />
      <%= f.number_field :weight, :class => 'text_field' %>
    </div>

    <br>
    <div class="field">
      <%= f.label :目標体重 %><br />
      <%= f.number_field :target_weight, :class => 'text_field' %>
    </div>

    <br>
    <div class="field">
      <%= f.label :目標体脂肪 %><br />
      <%= f.number_field :target_body, :class => 'text_field' %>
    </div>

    <br>
    <div class="field">
      <%= f.label :profile %><br />
      <%= f.text_area :profile, class: 'form-control' %>
    </div>

    <br>
    <div class="form-group">
      <%= f.submit "更新", class: 'btn btn-primary btn-block btn-outline-light' %>
    </div>
  <% end %>

  <hr class="devise-link my-5">
  <div class="form-group">
    <%= link_to "トップページ", graphs_path, class: 'btn btn-dark btn-block mb-4 btn-outline-light' %>
    <%= link_to "アカウント削除", registration_path(resource_name), data: {confirm: t('.are_you_sure')}, method: :delete, class: 'btn btn-danger btn-block btn-outline-light' %>
  </div>
</div>