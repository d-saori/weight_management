<div class="d-grid gap-2 col-6 mx-auto">
  <h2><%= t('.sign_up') %></h2><br>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= bootstrap_devise_error_messages! %>

    <br>
    <div class="field">
      <%= f.label :氏名 %><br />
      <%= f.text_field :username, autofocus: true, class: 'form-control form-control-sm', placeholder: "例)ごまつくね" %>
    </div>

    <br>
    <div class="form-group">
      <%= f.label :メールアドレス %>
      <%= f.email_field :email, class: 'form-control form-control-sm', required: true, placeholder: "PC・携帯どちらでも可" %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control form-control-sm', required: true, placeholder: "半角6文字以上英数小文字", minlength: @minimum_password_length, maxlength: '30' %>

      <% if @minimum_password_length %>
        <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: 'form-control form-control-sm' %>
    </div>

    <br>
    <div class="form-group">
      <%= f.submit t('.sign_up'), class: 'btn btn-primary btn-block btn-outline-light' %>
    </div>
  <% end %>

  <%= render 'devise/shared/links' %>

  <hr><br>
  <%= link_to "トップページ", root_path, class: 'btn btn-dark btn-block mb-4 btn-outline-light' %>
</div>