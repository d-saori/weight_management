<h2><%= t('.sign_up') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= bootstrap_devise_error_messages! %>

  <div class="form-group">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control', required: true, minlength: @minimum_password_length, maxlength: '30' %>

    <% if @minimum_password_length %>
      <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :氏名 %><br />
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :年齢 %><br />
    <%= f.number_field :age %>
  </div>

  <div class="field">
    <%= f.label :性別 %><br />
    <%= f.select :gender, [["男", "男"], ["女", "女"]], :prompt => "選択してください" %>
  </div>

  <div class="field">
    <%= f.label :身長 %><br />
    <%= f.number_field :height, :class => 'text_field' %>
  </div>

  <div class="field">
    <%= f.label :体重 %><br />
    <%= f.number_field :weight, :class => 'text_field' %>
  </div>

  <div class="form-group">
    <%= f.submit t('.sign_up'), class: 'btn btn-primary btn-block' %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>
