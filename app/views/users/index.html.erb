<h1>ユーザー一覧</h1>
<table>
  <thead>
  <tr>
    <th scope="col">No.</th>
    <th scope="col">ユーザー名</th>
    <th scope="col"></th>
  </tr>
  </thead>
  <tbody>
  <% @users.each.with_index(1) do |user, i| %>
    <tr>
      <th scope="row"><%= i %></th>
      <td><%= user.username %></td>
      <td>
        <%= link_to "編集", edit_user_path(user) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>